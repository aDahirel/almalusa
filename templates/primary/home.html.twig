{% extends "base.html.twig" %}
{% block body %}
	<header>
		<link rel="stylesheet" href="{{ asset('css/home.css') }}">
	</header>
	<div id="reception">
		<div id="welcome_message">
			<h1 class="display-4 font-weight-bold">
				Bem vindo !
			</h1>
			<p class="lead">
				Créée à RENNES le 14 décembre 2012, L'Association Culturelle Portugaise ALMA LUSA a pour objectif																																														                diversifiées : expositions, conférences, chant, voyages, etc.
			</p>
		</div>
		<img id="welcome_picture" src="{{ asset('images/algarve.jpg') }}" alt="Photo de bienvenue">
	</div>
	<div class="container">
		<h2 class="py-5 text-uppercase">Nos derniers articles :</h2>
		{% for lastArticle in lastArticle %}
	
			<div class="article">
				
				<img class="article_image" src="{{ vich_uploader_asset(lastArticle, 'imageFile') }}" alt="Photo de l'article">
				<div class="article_container">
					<span class="badge badge-success float-right">Nouveau</span>
					<a href="{{ path('article', {'id' : lastArticle.id, 'slug': lastArticle.slug }) }}">
						<h4>{{ lastArticle.title }}</h4>
					<p>{{ lastArticle.createdAt | date('d/m') }}</p></a>
					<li class="list-unstyled d-flex flex-wrap">
						{% for category in lastArticle.categories %}

							<a class="wording_link mr-1">
								{{ category.title }}
							</a>

						{% endfor %}
					</li>
				</div>
			</div>
		
		{% endfor %}
		<div class="article_list d-flex flex-wrap justify-content-between align-content-between">
			{% for article in articles|slice(0, 9) %}
				<div>
					<a href="{{ path('article', {'id' : article.id, 'slug': article.slug }) }}">
						<div id="image_container">
							<img id="article_picture" src="{{ vich_uploader_asset(article, 'imageFile') }}">
						</div>
					</a>
					<div class="article_card d-flex flex-column justify-content-between">
						<a href="{{ path('article', {'id' : article.id, 'slug': article.slug }) }}">
						<span style="min-height: 54px;">{{ article.title }}</span>
						<li class="list-unstyled d-flex flex-wrap">
							{% for category in article.categories %}
								<a class="wording_link mr-1">
									{{ category.title }}
								</a>
							{% endfor %}
						</li>
						<p>{{ article.createdAt | date('d/m') }}</p>
						</a>
					</div>
				</div>
			{% endfor %}
			<a class="py-4 ml-auto" href="{{ path('articles') }}">
				<input class="text-uppercase p-2 list_button" value="Tous les articles ->"></input>
			</a>
		</div>
	</div>
{% endblock %}
