{% extends "base.html.twig" %}
{% block body %}
	<header>
		<link rel="stylesheet" href="{{ asset('css/home.css') }}">
	</header>
	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<h1 class="display-4 font-weight-bold">
				Bem vindo !
			</h1>
			<p class="lead">
				Créée à RENNES le 14 décembre 2012, L'Association Culturelle Portugaise ALMA LUSA a pour objectif
																				                de promouvoir la langue portugaise et la culture lusophone à travers des activités culturelles
																				                diversifiées: expositions, conférences, chant, voyages, etc.
			</p>
		</div>
	</div>
	<img src="{{ asset('images/algarve.jpg') }}" width="100%" alt="article_picture">
	<div class="container my-5 py-3" style="background-color: white;">
		<h2 class="py-4">Derniers articles :</h2>
		<div class="d-flex justify-content-between">
			{% for newArticle in newArticles %}
				<article class="d-flex flex-column" style="max-width: 600px;">
					<h3 class="mb-3">{{ newArticle.title }}</h3>
					<img src="{{ vich_uploader_asset(newArticle, 'imageFile') }}" alt="" style="max-width: 400px;">
					<div>
						{% if newArticle.content | length > 200 ? newArticle.content %}
							{% set contentSliced = newArticle.content | slice(0, 100) ~ ' ...' %}
							<p>
								{{ contentSliced | raw }}
							</p>
						{% else %}
							<p>
								{{ newArticle.content | raw }}
							</p>
						{% endif %}
					</div>
					<a href="{{ path('blog_show', {'id' : newArticle.id, 'slug': newArticle.slug }) }}" class="btn btn-secondary" style="width: 150px; margin-right: auto;">
						Lire d'avantage
					</a>
				</article>
			{% endfor %}
			<div style="max-width: 300px; margin-left: auto;">
				<h5>
					Recherche par thèmes :
				</h5>
				<ul class="list-unstyled">
					<a href="">
						<li>Cinéma</li>
					</a>
					<a href="">
						<li>Conférences</li>
					</a>
					<a href="">
						<li>Expositions</li>
					</a>
					<a href="">
						<li>Gastronomie</li>
					</a>
					<a href="">
						<li>Lectures</li>
					</a>
					<a href="">
						<li>Musique</li>
					</a>
				</ul>
			</div>
		</div>
		<hr>
		<div class="container">
			<div class="row d-flex justify-content-between">
				{% for article in articles|slice(0, 3) %}
					<div class="col-md-4 d-flex flex-column carte">
						<img id="article_picture" src="{{ vich_uploader_asset(article, 'imageFile') }}">
						{{ article.title }}
						<p class="m-auto">
							<a class="btn btn-secondary" href="{{ path('blog_show', {'id' : article.id, 'slug': article.slug }) }}" role="button">
								Lire d'avantage
							</a>
						</p>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
