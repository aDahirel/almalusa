{% extends "base.html.twig" %}
{% block body %}
    <header>
        <link rel="stylesheet" href="{{ asset('css/user.css') }}">
    </header>
    <div class="container">
        <h1 class="mb-4">Changement de vos informations :</h1>
        {{ form_start(form) }}
        <div class="row mb-3">
            <label class="h5 mb-3 float-left col-3">
                Identifiant et mail :
            </label>
            <div class="form-group col-3">
                {{ form_widget(form.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}} ) }}
            </div>
            <div class="form-error col-0">
                {{ form_errors(form.email) }}
            </div>
            <div class="form-group col-5">
                {{ form_widget(form.email, {'attr': {'placeholder': 'Adresse email'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <label class="h5 mb-3 float-left col-2">
                Photo de profil :
            </label>
            <div class="form-group col-5">
                {{ form_widget(form.imageFile) }}
            </div>
        </div>
        <div class="row">
            <label class="h5 mb-3 float-left col-3">
                Entrez votre mot de passe :
            </label>
            <div class="form-error col-0">
                {{ form_errors(form.password) }}
            </div>
            <div class="form-group col-5">
                {{ form_widget(form.password, {'attr': {'placeholder': 'Mot de passe','value' :''}}) }}
            </div>
            <div class="form-error col-0">
                {{ form_errors(form.confirm_password) }}
            </div>
            <div class="form-group col-4">
                {{ form_widget(form.confirm_password, {'attr': {'placeholder': 'Confirmation du Mot de passe'}}) }}
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-lg btn-success w-100">
                Mettre Ã  jour
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}